{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "out",
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"newLine": "lf",
		"lib": [
			"es5",
			"es2015.promise"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"release",
		"out",
		"test-cases"
	]
}
